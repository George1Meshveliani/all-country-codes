{
    "name":        "george1meshveliani/all-country-codes",
    "type":        "library",
    "description": "List of 217 language codes: ISO 639-1.",
    "keywords": [
        "Language code",
        "Language",
        "ISO 639-1",
        "HHVM",
        "PHP"
    ],
    "license": "MIT",
    "authors": [
        {
            "name":     "George Meshveliani",
            "email":    "giorgi.meshveliani@gmail.com",
            "homepage": "https://meshveliani.netlify.app/",
            "role":     "Developer"
        }
    ],
    "support": {
        "source": "https://github.com/George1Meshveliani/all-country-codes"
    },
    "config": {
        "preferred-install": "dist"
    },
    "minimum-stability": "stable",
    "require": {
        "php": "^5.6 || ^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7 || ^6.0",
        "squizlabs/php_codesniffer": "^3.0",
        "friendsofphp/php-cs-fixer": "^2.3 || ^2.8",
        "phpmd/phpmd": "^2.6"
    },
    "autoload": {
        "psr-4": {
            "Meshveliani\\LanguageCode\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Meshveliani\\LanguageCode\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "scripts": {
        "phpunit": "vendor/bin/phpunit --colors=always;",
        "phpcs": "vendor/bin/phpcs --standard=phpcs.xml $(find . -name '*.php');",
        "phpmd": "vendor/bin/phpmd src,tests text ./phpmd.xml",
        "fix": [
            "vendor/bin/php-cs-fixer fix -v",
            "vendor/bin/phpcbf src tests"
        ],
        "tests": [
            "clear",
            "@phpmd",
            "@phpcs",
            "@phpunit"
        ]
    }
}
